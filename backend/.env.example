# Environment Variables

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/gamma_options
# For Railway, this will be auto-provided

# Server Configuration
PORT=3001
NODE_ENV=development

# API Keys (if needed for your option data provider)
OPTIONS_API_KEY=your_api_key_here

# CORS Settings
FRONTEND_URL=http://localhost:3000

# Data Collection Settings
COLLECT_INTERVAL_MINUTES=15
DATA_RETENTION_DAYS=3

# Tickers Configuration
# US Market: SPX, GLD, TSLA (CBOE)
US_TICKERS=SPX,GLD,TSLA
# Indian Market: NIFTY, BANKNIFTY, RELIANCE (NSE)
INDIA_TICKERS=NIFTY,BANKNIFTY,RELIANCE

# Market Hours (24-hour format, UTC)
# US Market Hours: 9:30 AM - 4:00 PM EST (14:30 - 21:00 UTC)
US_MARKET_START_HOUR=14
US_MARKET_START_MINUTE=30
US_MARKET_END_HOUR=21
US_MARKET_END_MINUTE=0

# Indian Market Hours: 9:15 AM - 3:30 PM IST (3:45 - 10:00 UTC)
INDIA_MARKET_START_HOUR=3
INDIA_MARKET_START_MINUTE=45
INDIA_MARKET_END_HOUR=10
INDIA_MARKET_END_MINUTE=0
